<section class="chat">
    <h2 class="visually-hidden">Chat</h2>
    <label>
        <button type="button" class="new-chat-button" id="new-chat-button">
            <img src="{{ './img/new-chat.svg' | asset_url }}" alt="new chat Icon">
            Nieuwe Chat
        </button>
    </label>
    <section class="chatbot-main" id="chatbot-main">
        <h2 class="visually-hidden">Chatbot berichten</h2>
        {% include './components/chatbot-body' %}
    </section>
    <form class="search-form" method="post" action="/search">
            <input id='search-bar' type="text" name="query" placeholder="Ik zoek..." required>
            <label>
                <button type="submit">
                    <img src="{{ './img/send-icon.svg' | asset_url }}" alt="Submit Icon">
                </button>
            </label>
        </form>
</section>
